<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
    <meta charset="utf-8">

    <title>Plans</title>

    <!--  Glyphicons -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"> <!--required for glyphicon-->

    <!--Custom CSS-->
    <link rel="stylesheet"  type="text/css"  href="/css/eventForm.css">

  </head>
  <body>

      <% include partials/nav.ejs %>
      <h3  class="text-center" >Create an Event</h3>
      <!-- Form component-->
    <div class="container form p-5">

      <form method="POST" action="/event/create" id="eventForm">
        <div class="form-group">
          <label class="sr-only" for="name">Name</label>
          <input type="text" name="name" id="name"  class="form-control"  placeholder = "Event Name" required>
        </div>

        <!-- TODO: Date and time restrictions -->
        <div class="form-group">  
          <label class="sr-only" for="datetime">Date and Time</label> 
          <input type='datetime-local' name = 'datetime' class="form-control" />
        </div>

        <div class="form-group">     
          <label class="sr-only" for="venue">Venue</label>
          <input type="text" name="venue"  id="venue"  class="form-control"  placeholder = "Event Venue (Apt/Room no./Company name)" required>
        </div>

        <div class="form-group">
          <label class="sr-only" for="address">Address</label>
          <input id="address" class="controls form-control" type="text" placeholder="Address Search Box" name = "address" required>
          <div id="map"></div>
        </div>

        <div class="form-group">
          <label for="about">Brief Desciption:</label>
          <textarea class="form-control text" rows="5" id="about" name="about" form="eventForm"></textarea>
        </div>

        <input type="hidden" name="latitude" id="latitude">
        <input type="hidden" name="longitude" id="longitude">

        <button type="submit" class="btn btn-primary active btn-block">Submit</button>
      </form>

    </div>

    <!--Custom JS-->
    <script src="/js/eventForm.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAocpxsHW7TozJJoqw51x26jX8mWokUQx0&libraries=places&callback=initAutocomplete"
         async defer></script>

  </body>
</html>
